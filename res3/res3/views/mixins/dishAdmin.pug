mixin dishAdmin(dish)
    .dish
        .dishImage
            a(href=`/admin/menu/${dish.id}`)
                img(src=`/images/dishes/${dish.image}`, alt=`/images/dishes/${dish.image}` class="dish-img")
                a(href=`/admin/menu/${dish.id}/edit` ) 
                    button(type="submit" class="edit-button") Edit 
                a(href=`/admin/menu/${dish.id}/remove`  ) 
                    form(action=`/admin/menu/${dish.id}/remove`, method="post")
                        button(type="submit" class="remove-button") Remove        
