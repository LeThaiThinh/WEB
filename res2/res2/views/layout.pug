doctype html
html
  head
    title= title
    link(rel='stylesheet', href='/stylesheets/style.css')
  body
    header
      nav
        a(href='/')
          img#logo(src="images/haisan.jpg", alt="")
        ul
          li
            a(href="/signUp") sign up
          li 
            a(href="/logIn") login
      .search_nav
        form(action='/results' method="POST")
          .input_wrapper
            label(for="destination") Destination
            input(type="text" id='destination' name='destination' required)
          .input_wrapper
            label(for="duration") Duration(nights)
            input(type="text" id='duration' name='duraion' required)
          .input_wrapper
            label(for="departure-date") Depature-date
            input(type="date" id='departure-date' name='departure-date' required)
          .input_wrapper
            label(for="number-guests") Number Guest
            input(type="number" id='number-guest' name='number-guest' required)
          .input_wrapper
            select(name="stars")
              option(value="1") Min 1 star
              option(value="2") Min 2 star
              option(value="3") Min 3 star
              option(value="4") Min 4 star
              option(value="5") Min 5 star
          .input_wrapper
            select(name="sort")
              option(value="1") Price Low - High
              option(value="-1") Price High - Low
          .input_wrapper
            button(type="submit") Search
      img#logo(src="images/haisan.jpg", alt="")
    block content
